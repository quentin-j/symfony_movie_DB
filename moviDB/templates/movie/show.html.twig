{% extends 'base.html.twig' %}

{% block title %}Hello MovieController!{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>{{movie.title}}</h1>

    {% for genre in movie.genres %}
        <span class="badge rounded-pill bg-info">{{genre.name}}</span>
    {% endfor %}

    <h2>Casting</h2>

    <ul class="list-group list-group-flush">
        {# on utilise le filtre sort de twig pour qui permet de trier les donnÃ©es d'un tableau #}
        {% for casting in movie.castings |sort((a, b) => a.creditOrder <=> b.creditOrder) %}
            <li class="list-group-item">{{ casting.creditOrder }} - {{ casting.role }} : {{ casting.person.name }}</li>
        {% endfor %}
    </ul>

{% endblock %}
