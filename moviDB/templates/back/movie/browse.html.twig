{% extends 'base.html.twig' %}

{% block title %}Liste des films{% endblock %}

{% block body %}
    <h1>Liste des films</h1>
    
    <a class="btn btn-primary" href="{{ path('admin_movie_add') }}">Ajouter</a>

    <ul class="list-group list-group-flush">
        {% for movie in movie_list %}
        <li class="list-group-item"><a href="{{ path('admin_movie_read', {id : movie.id}) }}">{{ movie.title }}</a></li>
        {% endfor %}
    </ul>

{% endblock %}